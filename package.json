{
  "name": "serverless-universal-react",
  "version": "1.0.0",
  "description": "ServerlessUniversalReact",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "BABEL_ENV=node jest",
    "transpile": "gulp --gulpfile gulpfile.backend.js",
    "upload:client": "AWS_PROFILE=default gulp --gulpfile gulpfile.client.js",
    "bundle": "webpack --display-error-details",
    "server": "node build/backend/server.js",
    "dev:server": "STATIC_PATH='http://192.168.0.102:8080/' DISABLE_STATIC_CONTENT=true BABEL_ENV=node babel-watch src/server.js",
    "dev:client": "webpack-dev-server --host 0.0.0.0",
    "start": "npm run transpile && npm run bundle && npm run server",
    "deploy:backend": "npm run transpile && serverless deploy",
    "deploy:client": "npm run bundle && npm run upload:client"
  },
  "pre-commit": [
    "lint"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/*.spec.js",
      "!src/server.js",
      "!src/View/index.js"
    ],
    "coverageReporters": [
      "lcov",
      "cobertura",
      "html"
    ],
    "setupFiles": [
      "<rootDir>/src/__mocks__/setupFile.js"
    ],
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "transformIgnorePatterns": [
      "/scss/"
    ]
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "ejs": "^2.5.7",
    "express": "^4.15.4",
    "js-yaml": "^3.9.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-bootstrap": "^0.31.3",
    "react-dom": "^15.6.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^17.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-watch": "^2.0.7",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.7",
    "enzyme": "^2.9.1",
    "eslint": "^4.7.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.1.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-clean": "^0.3.2",
    "gulp-delete-lines": "0.0.7",
    "gulp-s3-upload": "^1.6.6",
    "jest": "^17.0.0",
    "jest-cli": "^17.0.0",
    "jest-junit-reporter": "^1.1.0",
    "node-sass": "^4.5.3",
    "pre-commit": "^1.2.2",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.8.2"
  }
}
